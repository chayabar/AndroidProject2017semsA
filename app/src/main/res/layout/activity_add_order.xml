<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.owner.android5778_3965_2493_00.controller.addOrderActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/CustomerIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="customer ID"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/OrderStatusSpinner"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderIdEditText" />

            <Spinner
                android:id="@+id/OrderStatusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/CarNumberEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CustomerIdEditText" />

            <EditText
                android:id="@+id/CarNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Car number"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/StartRentEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderStatusSpinner" />

            <TextView
                android:id="@+id/startRentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start rent:" />

            <view
                android:id="@+id/CustomDatePiker"
                class="com.example.owner.android5778_3965_2493_00.controller.CustomDatePicker"
                id="@+id/view"
                layout_width="match_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/endRentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End rent:" />

            <view
                android:id="@+id/CustomDatePiker2"
                class="com.example.owner.android5778_3965_2493_00.controller.CustomDatePicker"
                id="@+id/view4"
                layout_width="match_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/StartMileAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Start Mile Age"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/EndMileAgeEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EndRentEditText" />

            <EditText
                android:id="@+id/EndMileAgeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="End Mile Age"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/FuelFillingCheckBox"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/StartMileAgeEditText" />

            <CheckBox
                android:id="@+id/FuelFillingCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel Filling"
                app:layout_constraintBottom_toTopOf="@+id/FuelLitterEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EndMileAgeEditText" />

            <EditText
                android:id="@+id/FuelLitterEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Number of litters filled"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/ChargeEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FuelFillingCheckBox" />

            <EditText
                android:id="@+id/ChargeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Total payment"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FuelLitterEditText" />

            <EditText
                android:id="@+id/OrderIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Order id"
                android:inputType="number"
                app:layout_constraintBottom_toTopOf="@+id/CustomerIdEditText"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="484dp" />
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
