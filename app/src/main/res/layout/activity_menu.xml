<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.android5778_3965_2493_00.controller.MenuActivity">

    <Button
        android:id="@+id/BranchButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Branch"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toTopOf="@+id/CarButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/CarButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Car"
        app:layout_constraintRight_toRightOf="@+id/BranchButton"
        app:layout_constraintLeft_toLeftOf="@+id/BranchButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toTopOf="@+id/CarModelButton"
        app:layout_constraintTop_toBottomOf="@+id/BranchButton" />

    <Button
        android:id="@+id/CarModelButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Car Model"
        app:layout_constraintBottom_toTopOf="@+id/CustomerButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/CarButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CarButton" />

    <Button
        android:id="@+id/CustomerButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Customer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/CarModelButton"
        app:layout_constraintRight_toRightOf="@+id/CarModelButton"
        app:layout_constraintTop_toBottomOf="@+id/CarModelButton"
        app:layout_constraintBottom_toTopOf="@+id/OrderButton" />

    <Button
        android:id="@+id/OrderButton"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Order"
        app:layout_constraintTop_toBottomOf="@+id/CustomerButton"
        app:layout_constraintRight_toRightOf="@+id/CustomerButton"
        app:layout_constraintLeft_toLeftOf="@+id/CustomerButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
