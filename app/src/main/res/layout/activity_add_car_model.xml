<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.owner.android5778_3965_2493_00.controller.addCarModelActivity">

    <Button
        android:id="@+id/AddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:text="add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/ModelCodeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="model code"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/CompanyNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="company name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/ModelNameEditText"
        app:layout_constraintRight_toRightOf="@+id/ModelNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/ModelNameEditText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/ModelNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="model name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/CompanyNameEditText"
        app:layout_constraintRight_toRightOf="@+id/CompanyNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/CompanyNameEditText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/EngineCapacityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="engine capacity"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="@+id/ModelNameEditText"
        app:layout_constraintRight_toRightOf="@+id/ModelNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/ModelNameEditText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/SeatsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:ems="10"
        android:hint="seats"
        android:inputType="number"
        app:layout_constraintLeft_toLeftOf="@+id/EngineCapacityEditText"
        app:layout_constraintRight_toRightOf="@+id/EngineCapacityEditText"
        app:layout_constraintTop_toBottomOf="@+id/EngineCapacityEditText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/ColorEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="color"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/SeatsEditText"
        app:layout_constraintRight_toRightOf="@+id/SeatsEditText"
        app:layout_constraintTop_toBottomOf="@+id/SeatsEditText"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/YearsManufactureEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="1dp"
        android:ems="10"
        android:hint="year manufacture"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/AddButton"
        app:layout_constraintLeft_toLeftOf="@+id/ColorEditText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Spinner
        android:id="@+id/GearBoxSpinner"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="126dp"
        app:layout_constraintBottom_toBottomOf="@+id/ColorEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ModelNameEditText"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>